.base
    display: -webkit-flex
    justify-content: stretch

.mainarea
    width: calc(100vw - 300px)
    height: 100vh
    overflow-x: hidden
    overflow-y: scroll

    .sticky
        position: sticky
        top: 0
        z-index: 100

    section
        background-color: white
        border-bottom: 1px solid black
        padding: 8px

.subarea
    display: -webkit-flex
    flex-direction: column
    justify-content: space-between
    height: 100vh