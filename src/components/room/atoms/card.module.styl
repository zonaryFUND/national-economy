.card
    text-align: center
    display: inline-block
    position: relative
    width: 120px
    height: 160px
    border-radius: 8px
    border: 2px solid black
    padding: 4px
    text-align: center
    vertical-align: top

    >*
        border-radius: 4px
    
    >*:not(:last-child)
        margin-bottom: 4px

    header
        position: relative
        background-color: #F0ECE1
        border: 1px #D7C8A0 solid
        height: 28px

        p
            position: absolute
            background-color: white
            border-radius: 50%
            border: 1px solid black
            font-size: 20px
            font-weight: bold
            line-height: 28px
            top: 0
            left: 0
            bottom: 0
            width: 28px

        h3
            display: inline-block
            vertical-align: middle
            font-size: 14px
            font-weight: bold

    .img
        width: 100%
        height: 88px
        padding: 4px
        background-color: #F0ECE1
        img
            max-width: 100%
            height: 100%

    footer
        p
            display: inline-block
            min-width: 26px
            border-radius: 50%
            border: 2px yellow outset
            color: white
            font-size: 14px
            text-shadow: 2px 2px 0 black

        .icons
            position: absolute
            bottom: 0
            right: 0
    
    .tooltip
        display: none
        width: 120px
        background-color: white
        z-index: 10
        font-size: 12px
        margin-left: -6px
        border-radius: 4px
        border: 2px solid gray
        box-shadow: 8px 8px 4px rgba(black, 0.4)
        padding: 4px
        pointer-events: none

    .cover
        background-color: rgba(#26364F, 0.8)
        position: absolute
        top: 0
        left: 0
        bottom: 0
        right: 0
        height: 100%
        p
            color: white
            margin-top: 30px
            font-size: 18px
            span
                font-size: 30px

.card:hover
    .tooltip
        display: block
        position: absolute

.building
    background-color: #6A4B36

.public
    background-color: #26364F

.consumergoods
    background-color: #144530

.card:not(:last-child)
    margin-right: 4px